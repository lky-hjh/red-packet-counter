{
  "name": "red-packet-manager",
  "version": "1.0.0",
  "description": "多功能红包管理系统 - 用户认证、红包计数、年份筛选、收入排行榜",
  "type": "module",
  "scripts": {
    "dev": "powershell \"Start-Process -NoNewWindow npm -ArgumentList 'run','server'; Start-Process -NoNewWindow npm -ArgumentList 'run','client'\"",
    "server": "node server/server.js",
    "client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start-server": "node server/server.js",
    "start-client": "vite",
    "dev-windows": "powershell \"Start-Process npm -ArgumentList 'run','server'; timeout 3; Start-Process npm -ArgumentList 'run','client'\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "tdesign-react": "1.12.0",
    "tdesign-icons-react": "0.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "concurrently": "^8.2.2",
    "less": "4.3.0",
    "tailwindcss": "3.4.17",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "postcss": "8.5.0",
    "autoprefixer": "^10.4.20"
  }
}