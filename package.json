{
  "name": "red-packet-counter",
  "version": "1.0.0",
  "description": "过年红包计数器 - 记录和管理红包金额",
  "type": "module",
  "scripts": {
    "dev": "powershell \"Start-Process -NoNewWindow npm -ArgumentList 'run','server'; Start-Process -NoNewWindow npm -ArgumentList 'run','client'\"",
    "server": "node server/server.js",
    "client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start-server": "node server/server.js",
    "start-client": "vite",
    "dev-windows": "powershell \"Start-Process npm -ArgumentList 'run','server'; timeout 3; Start-Process npm -ArgumentList 'run','client'\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "concurrently": "^8.2.2"
  }
}